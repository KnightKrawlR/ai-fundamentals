{
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules/**",
      ".git/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/homepage_bundle.js",
        "destination": "/homepage_bundle.js"
      },
      {
        "source": "/homepage_bundle_v2.js",
        "destination": "/homepage_bundle_v2.js"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  }
}
