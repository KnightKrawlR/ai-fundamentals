{
  "version": 2,
  "builds": [
    {
      "src": "my-games/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd my-games && npm install && npm run build"
      }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**",
      "use": "@vercel/static"
    },
    {
      "src": "js/**",
      "use": "@vercel/static"
    },
    {
      "src": "images/**",
      "use": "@vercel/static"
    },
    {
      "src": "learning/**",
      "use": "@vercel/static"
    }
  ],
  "outputDirectory": "public",
  "routes": [
    { "src": "/dist/(.*)", "dest": "/dist/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(.*)\\.html$", "dest": "/$1.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/learning/(.*)", "dest": "/learning/$1" }
  ]
} 