{
  "version": 2,
  "builds": [
    {
      "src": "homepage-static/**",
      "use": "@vercel/static"
    },
    {
      "src": "css/**",
      "use": "@vercel/static"
    },
    {
      "src": "js/**",
      "use": "@vercel/static"
    },
    {
      "src": "images/**",
      "use": "@vercel/static"
    },
    {
      "src": "learning/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/homepage-static/assets/$1"
    },
    {
      "src": "/",
      "dest": "/homepage-static/index.html"
    },
    {
      "src": "/(.*)",
      "continue": true,
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ]
} 